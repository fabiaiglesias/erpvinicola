<%- contentFor('body') %>
<section id="account">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h4 class="title upper bold login-default">Login</h4>
                <span class="subtitle login-default">Log in account</span>
                <form action="">
                    <div class="form-group">
                        <label class="login-default" for="email">Email:</label>
                        <input type="email" name="email" class="form-control" placeholder="enter your email address">
                    </div>
                    <div class="form-group">
                        <label class="login-default" for="password">Password:</label>
                        <input type="password" name="password" class="form-control" placeholder="enter your password">
                    </div>
                </form>
                <div class="form-group">
                    <a href="#">Forget your password?</a>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-marsala-default">Log in</button>
                </div>
        </div>
        </div>
    </div>
</section>